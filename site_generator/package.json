{
  "name": "nana-site-generator",
  "version": "1.0.0",
  "description": "Static site generator for nana documentation",
  "type": "module",
  "main": "src/build.js",
  "scripts": {
    "build": "node src/build.js",
    "dev": "node src/build.js --watch",
    "check": "node src/check.js",
    "check-links": "node src/link-checker.js",
    "serve": "live-server ../exports/website --port=3000 --open=/",
    "open-local": "npm run build && npm run serve",
    "open-file": "npm run build && powershell -Command \"Invoke-Item 'C:\\Users\\brand\\Documents\\nana\\exports\\website\\index.html'\"",
    "open-github": "start https://brandf.github.io/nana",
    "deploy-and-wait": "node src/monitor-deployment.js"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "gray-matter": "^4.0.3",
    "lunr": "^2.3.9",
    "marked": "^16.3.0",
    "rehype": "^13.0.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  }
}
